<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="base" namespace="/" extends="struts-default">
    <!-- 定义处理请求URL为login.action的Action -->
        <action name="blog" class="net.cfrost.core.web.action.ForwardAction">
        <!-- 定义处理结果字符串和资源之间的映射关系 -->
            <result name="success" type="redirect">blog/</result>
        </action>
    </package>
    
    <!-- struts2的action必须放在一个指定的包空间下定义 -->
    <package name="blog" namespace="/blog" extends="struts-default">
    <!-- 定义处理请求URL为login.action的Action -->
        <action name="" class="net.cfrost.core.web.action.ForwardAction">
        <!-- 定义处理结果字符串和资源之间的映射关系 -->
            <result name="success">/WEB-INF/modulePages/blog/blog-index.jsp</result>
        </action>
    </package>
</struts>
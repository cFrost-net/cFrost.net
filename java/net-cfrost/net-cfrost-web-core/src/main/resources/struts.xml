<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <!-- 支持Spring -->
    <constant name="struts.objectFactory" value="spring" />
    
    <!-- 启用actionname中的/支持，但*通配符不会匹配/，完美~_~ -->
    <constant name="struts.enable.SlashesInActionNames" value="true"/>

    <package name="base-struct" namespace="/" extends="struts-default">
    
        <interceptors>  
            <interceptor name="permissionControlInterceptor" class="permissionControlInterceptor" />  
            <interceptor-stack name="permissionControlStack">
                <interceptor-ref name="permissionControlInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>  
          
        <default-interceptor-ref name="permissionControlStack" />
    </package>
    
    <package name="root" namespace="/" extends="base-struct">
    
    <!-- 定义处理请求URL为login.action的Action -->
        <action name="index" class="forwardAction">
            <!-- 定义处理结果字符串和资源之间的映射关系 -->
            <result name="success">/WEB-INF/index.jsp</result>
        </action>
        <action name="*" class="forwardAction">
            <!-- 定义处理结果字符串和资源之间的映射关系 -->
            <result name="success" type="redirect">{1}/</result>
        </action>
    </package> 
</struts>